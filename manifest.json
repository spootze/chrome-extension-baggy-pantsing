{
  "name": "Baggy pantsing",
  "description": "Extension with baggiest of pants",
  "version": "1.0",
  "manifest_version": 3,
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["pants.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "You have been pantsed!",
    "default_icon": {
      "16": "/images/icon16.png",
      "32": "/images/icon32.png",
      "48": "/images/icon48.png",
      "128": "/images/icon128.png"
    }
  }
}
